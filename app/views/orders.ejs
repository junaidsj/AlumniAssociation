    <style>
        @keyframes zoomIn {
            0% {
                transform: scale(0.8);
                opacity: 0;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

        body {
            background-image: url('https://img.freepik.com/free-photo/blue-smooth-wall-textured-background_53876-106133.jpg?t=st=1723229353~exp=1723232953~hmac=60258414f3ba79bdc8375db2e88513ebebd7d10ac250afabd794506ca5cab786&w=740');
            background-color: #f0f0f0;
            font-family: 'Poppins', sans-serif;
            padding-top: 70px;
            margin: 0;
            overflow-x: hidden;
        }

        .navbar {
            background-color: black;
            border-radius: 5px;
            padding: 10px 20px;
            margin-bottom: 10px ;
            animation: fadeIn 1s ease-in-out;
            font-size: 18px; /* Increased font size */
            font-weight: bold; /* Added font weight */
            text-transform: uppercase;
            font-size: 50px;
        }

        .navbar-brand, .navbar-nav > li > a {
            color: #fff !important;
            font-weight: bold;
            font-size: 50px;
        }

        .navbar-brand:hover, .navbar-nav > li > a:hover {
            color: #00b4d8 !important;
        }

        .container {
            background-color: rgba(173, 216, 230, 0.7); /* Light blue with opacity */
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            animation: zoomIn 0.5s ease-in-out;
            backdrop-filter: blur(10px); /* Adding blur effect */
        }

        h2 {
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
        }

        .event-card {
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            transition: transform 0.3s;
            animation: fadeIn 1s ease-in-out;
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .event-card h4 {
            margin: 0;
            color: #003366;
        }

        .event-card p {
            margin: 5px 0;
            color: #666;
        }

        .table-striped {
            background-color: #f8f9fa;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .table-striped th {
            background-color: #003366;
            color: white;
        }

        .btn-custom {
            background-color: #0056b3;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 30px;
            transition: background-color 0.3s;
        }

        .btn-custom:hover {
            background-color: #003366;
        }

        .footer {
            background-color: black;
            color: white;
            text-align: center;
            padding: 20px;
            position: relative;
            margin-top: 30px;
            width: 100%;
            animation: fadeIn 1s ease-in-out;
        }

        .footer a {
            color: #ffeb3b;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
